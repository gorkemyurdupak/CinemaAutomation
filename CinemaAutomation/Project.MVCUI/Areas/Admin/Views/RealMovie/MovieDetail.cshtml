@model Movie
@{
    ViewBag.Title = "MovieDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-9">
    <section class="panel">
        <div class="panel-body">
            <div class="col-md-6">
                <div class="pro-img-details">
                    <img src="@Model.ImagePath" alt="" />
                </div>
                <div class="pro-img-list">
                    <a href="#">
                        <img src="" alt="">
                    </a>
                    <a href="#">
                        <img src="" alt="">
                    </a>
                    <a href="#">
                        <img src="" alt="">
                    </a>
                    <a href="#">
                        <img src="" alt="">
                    </a>
                    

                </div>
            </div>
            <div class="col-md-6">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        <h3>@Model.MovieName</h3>
                    </a>
                </h4> <br />
                <p>
                   
                </p>
                <div class="product_meta">
                    <span class="posted_in"> <strong>Tür:</strong> <a rel="tag" href="#">@Model.MovieGenre.GenreName</a></span>
                    <span class="tagged_as"><strong>Vizyon Tarihi :</strong> <a rel="tag" href="#">@Model.ShowDate</a>, <a rel="tag" href="#"></a>.</span>

                </div>
                <div class="m-bot15"> <strong>Süre : </strong>  <span class="pro-price">@Model.ScreenTime dakika</span></div>
                <div class="m-bot15"> <strong>Formatlar : </strong>  <span class="pro-price">@Model.Format </span></div>
                <div class="m-bot15"> <strong>Oyuncular : </strong>  <span class="pro-price">@Model.Actors </span></div>
                <div class="m-bot15"> <strong>Yönetmen : </strong>  <span class="pro-price">@Model.Director </span></div>
                <br /> <hr />


                <p>
                    @Html.ActionLink("Güncelle", "UpdateMovie", new { id = Model.ID }, new { @class = "btn btn-round btn-danger" })
                    @Html.ActionLink("Iptal Et", "MovieList", null, new { @class = "btn btn-round btn-default" })


                </p>
            </div>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading tab-bg-dark-navy-blue">
            <ul class="nav nav-tabs ">
                <li class="active">
                    <a data-toggle="tab" href="#description">
                        Özet
                    </a>
                </li>
                <li>
                    <a data-toggle="tab" href="#reviews">
                        Yorumlar
                    </a>
                </li>
            </ul>
        </header>
        <div class="panel-body">
          
            <div class="tab-content tasi-tab">
                <div id="description" class="tab-pane active">
                    
                    <p><h4 style="color:black">@Model.MovieSummary</h4> </p>
                   
                </div>
                <div id="reviews" class="tab-pane">
                    <article class="media">
                        <a class="pull-left thumb p-thumb">
                            <img src="img/avatar-mini.jpg">
                        </a>
                        <div class="media-body">
                            <a href="#" class="cmt-head">@Model.MovieComment</a>
                            <p> <i class="icon-time"></i> 1 hours ago</p>
                        </div>
                    </article>
                    <article class="media">
                        <a class="pull-left thumb p-thumb">
                            <img src="img/avatar-mini2.jpg">
                        </a>
                        <div class="media-body">
                            <a href="#" class="cmt-head">Nulla vel metus scelerisque ante sollicitudin commodo</a>
                            <p> <i class="icon-time"></i> 23 mins ago</p>
                        </div>
                    </article>
                    <article class="media">
                        <a class="pull-left thumb p-thumb">
                            <img src="img/avatar-mini3.jpg">
                        </a>
                        <div class="media-body">
                            <a href="#" class="cmt-head">Donec lacinia congue felis in faucibus. </a>
                            <p> <i class="icon-time"></i> 15 mins ago</p>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>

</div>

