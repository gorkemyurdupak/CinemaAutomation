@using PagedList
@using PagedList.Mvc
@model Tuple<IPagedList<Movie>, List<Genre>>
@{
    ViewBag.Title = "GetByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="OzelUrunler">

    <div style="float:right">
        @Html.PagedListPager(Model.Item1, page => Url.Action("GetByGenres", new { page, id = Model.Item1.First().GenreID }))
    </div> <br /> <br /> <br /> <br /> <br />

    <div class="row movie-list">
        @foreach (Movie item in Model.Item1)
        {
            <div class="col-md-4">
                <section class="panel">
                    <div class="pro-img-box">

                        <img src="~/Pictures/duzenbazlar-kulubusingle.png" />

                        <a href="@Url.Action("AddToCart","Member",new {id=item.ID })" class="adtocart">
                            <i class="icon-shopping-cart"></i>
                        </a>
                    </div>
                    <div class="panel-body text-center">
                        <h4>
                            <a href="#" class="pro-title">
                                @item.MovieName
                            </a>
                        </h4>
                        <p class="description">@item.MovieSummary</p>
                    </div>
                </section>
            </div>
        }


    </div>
    <div style="float:right">
        @Html.PagedListPager(Model.Item1, page => Url.Action("GetByGenres", new { page, id = Model.Item1.First().GenreID }))
    </div> <br /> <br /> <br /> <br /> <br />
</div>


