@model Movie
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <h1 style="color:green">@TempData["HesapAktif"]  </h1>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
    <link rel="icon" href="~/OuterTools/movie_review/images/logo@2x.png">
    <title>CineFlex</title>

    <link href="~/OuterTools/movie_review/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Loading third party fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
    <link href="~/OuterTools/movie_review/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- Loading main css file -->
    <link rel="stylesheet" href="~/OuterTools/movie_review/style.css">


    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->

</head>

<body>

    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a href="" id="branding">
                    <img src="~/OuterTools/movie_review/images/logo.png" alt="" class="logo">
                    <div class="logo-copy">
                        <h1 class="site-title">CineFlex</h1>
                        <small class="site-description">Keyifli Seyirler</small>
                    </div>
                </a> <!-- #branding -->


                <div class="top-nav">
                    <!--search & user info start-->
                    <ul class="nav pull-right top-menu">
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">

                                Bize Katılın
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended logout">
                                <div class="log-arrow-up"></div>
                                <li>@Html.ActionLink("Üye OL", "Register", "Home", new { id = "" }, null)<img alt="Üye OL" src="~/OuterTools/movie_review/images/icon-contact-user.png" /></li>
                                <li><img src="~/OuterTools/movie_review/images/loginp.png"/>  @Html.ActionLink("Giriş Yap","Login","Home",new { id = "" },null) </li>
                                <li>
                                
                                </li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                    <!--search & user info end-->
                </div>


                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item current-menu-item">@Html.ActionLink("Ana Sayfa","Index")</li>
                        <li class="menu-item">@Html.ActionLink("Hakkımızda","About")</a></li>
                        <li class="menu-item">@Html.ActionLink("Filmler", "Movies")</li>
                        <li class="menu-item">@Html.ActionLink("İletişim","ContactUs")</li>
                    </ul> <!-- .menu -->

                    <form action="#" class="search-form">
                        <input type="text" placeholder="Ara...">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>    <!--.main-navigation-->
                <div class="mobile-navigation"></div>
            </div>
        </header>
        <main class="main-content">
            <div class="container">
                <div class="page">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="slider">
                                <ul class="slides">
                                    <li class style="width: 100%; margin-right: -100%; display: block; position: relative;      z-index: 1; opacity: 0; float: left;">
                                        <a href="#"><img style="width:870px;height:518px;" draggable="false" alt="Slide 1" src="~/Pictures/469656-fast-furious-hobbs-shaw-en-avant-premieres-au-grand-rex-de-paris.jpg"></a>
                                    </li>
                                    <li class style="width: 100%; margin-right: -100%; display: block; position: relative; z-index: 1; opacity: 0; float: left;"><a href="#"><img style="width:870px;height:518px;" draggable="false" alt="Slide 2" src="~/Pictures/kod-adı-angel-770x433.png"></a></li>
                                    <li class="flex-active-slide" style="width: 100%; margin-right: -100%; display: block; position: relative; z-index: 2; opacity: 1; float: left;">
                                        <a href="#"><img style="width:870px;height:518px;" draggable="false" alt="Slide 3" src="~/Pictures/sarbasa1280e720.jpg"></a>
                                    </li> 
                                </ul>
                                <ul class="flex-direction-nav">
                                    <li>
                                        <a class="flex-prev" href="#"><i class="fa fa-chevron-left"></i></a>
                                    </li>
                                    <li>
                                        <a class="flex-next" href="#"><i class="fa fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="row">
                                <div class="col-sm-6 col-md-12">
                                    <div class="latest-movie">
                                        <a href="#"><img style="width:270px;height:244px;" src="~/Pictures/HO00003910_637019138600652257_masal-satosu-sihirli-davet.png" alt="Movie 1"></a>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-12">
                                    <div class="latest-movie">
                                        <a href="#"><img style="width:270px;height:244px;" src="~/Pictures/HO00003925_637025905754306816_45-25-kusursuzcinayet.png" alt="Movie 2"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- .row -->
                    <div class="row">
                        <div class="col-sm-6 col-md-3">
                            <div class="latest-movie">
                                <a href="#"><img style="width:270px;height:244px;" src="~/Pictures/HO00003926_637025905754306816_duzenbazlar-kulubu.png" alt="Movie 3"></a>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="latest-movie">
                                <a href="#"><img style="width:270px;height:244px;" src="~/Pictures/maxresdefault.jpg" alt="Movie 4"></a>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="latest-movie">
                                <a href="#"><img style="width:270px;height:244px;" src="~/Pictures/angrybirds2.jpg" alt="Movie 5"></a>
                            </div>
                        </div>
