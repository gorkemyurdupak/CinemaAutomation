@model Tuple<AppUser, AppUserProfile>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content=" Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/movie_review/images/logo@2x.png">
    <!-- Bootstrap core CSS -->
    <title>Kayıt OL</title>

    <link href="~/OuterTools/movie_review/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/movie_review/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/movie_review/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/movie_review/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/movie_review/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <style>
        #Item2_Address {
            resize: none;
        }
    </style>
</head>
<body class="login-body">
    <div class="container">

        <h1 style="color:red"> @ViewBag.ZatenVar </h1>

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h1 style="color:green">@TempData["HesapAktif"]</h1>
            <h2 class="form-signin-heading">Kayıt OL</h2>
            <div class="login-wrap">
                <p>Lütfen üye olmak için aşağıdaki alanları doldurunuz.</p>

                @Html.TextBoxFor(x => x.Item1.UserName, new { @class = "form-control", placeholder = "Kullanıcı adı giriniz" })

                @Html.TextBoxFor(x => x.Item1.Password, new { @class = "form-control", placeholder = "Şifre" })

                @Html.TextBoxFor(x => x.Item1.ConfirmPassword, new { @class = "form-control", placeholder = "Şifreyi Tekrar giriniz" })

                @Html.TextBoxFor(x => x.Item1.Email, new { @class = "form-control", placeholder = "Email Adresi" })
                @Html.TextBoxFor(x => x.Item2.Phone, new { @class = "form-control", placeholder = "Telefon No" })
                <div class="form-group">

                    <div class="col-md-10">
                        Cinsiyet
                        @Html.EnumDropDownListFor(model => model.Item2.Sex)
                        @Html.ValidationMessageFor(model => model.Item2.Sex, "", new { @class = "text-danger" })
                    </div>
                </div>  <br/> <br />

                <div class="form-group">
                   
                    <div class="col-md-10">
                        SMS Mesajı Almak İstiyorum
                        @Html.CheckBoxFor(model => model.Item1.SmsMessage)
                        @Html.ValidationMessageFor(model => model.Item1.SmsMessage)
                    </div>
                </div>


                @Html.TextBoxFor(x => x.Item2.UserFirstName, new { @class = "form-control", placeholder = "İsim" })

                @Html.TextBoxFor(x => x.Item2.UserLastName, new { @class = "form-control", placeholder = "Soyisim" })


                @Html.TextAreaFor(x => x.Item2.Address, new { @class = "form-control", placeholder = "Adresiniz" }) <br />

                <button class="btn btn-lg btn-login btn-block">Gönder</button>
                <div class="registration">
                    Zaten Üye misiniz ?
                    @Html.ActionLink("Giriş Yap", "Login")

                </div>
            </div>
        }


    </div>

</body>
</html>
