@using PagedList
@using PagedList.Mvc
@model Tuple<List<Genre>, IPagedList<Movie>>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>CineFlex | Filmler </title>
    <link rel="icon" href="~/OuterTools/movie_review/images/logo@2x.png">
    <!-- Loading third party fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
    <link href="~/OuterTools/movie_review/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- Loading main css file -->
    <link rel="stylesheet" href="~/OuterTools/movie_review/style.css">

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->

</head>

<body>


    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a href="~/Member/Index" id="branding">
                    <img src="~/OuterTools/movie_review/images/logo.png" alt="" class="logo">
                    <div class="logo-copy">
                        <h1 class="site-title">CineFlex</h1>
                        <small class="site-description">Keyifli Seyirler</small>
                    </div>
                </a> <!-- #branding -->

                <div class="top-nav">
                    <!--search & user info start-->
                    <ul class="nav pull-right top-menu">
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                Bize Katılın
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended logout">
                                <div class="log-arrow-up">
                                    <li><img src="~/OuterTools/movie_review/images/icon-contact-user.png" /> @Html.ActionLink("Üye OL", "Register", "Home", new { id = "" }, null)</li>  <br />

                                    <li><img src="~/OuterTools/movie_review/images/loginp.png" />  @Html.ActionLink("Giriş Yap", "Login", "Home", new { id = "" }, null) </li>
                                </div>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                    <!--search & user info end-->
                </div>

                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item">@Html.ActionLink("Ana Sayfa", "Index")</li>
                        <li class="menu-item">@Html.ActionLink("Hakkımızda", "About")</li>
                        <li class="menu-item current-menu-item"><a href="">Filmler</a></li>
                        <li class="menu-item">@Html.ActionLink("İletişim", "ContactUs")</li>
                    </ul> <!-- .menu -->

                    <form action="#" class="search-form">
                        <input type="text" placeholder="Ara...">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div> <!-- .main-navigation -->

                <div class="mobile-navigation"></div>
            </div>
        </header>
        <main class="main-content">
            <div class="container">
                <div class="page">
                    <div class="breadcrumbs">
                        @Html.ActionLink("Ana Sayfa", "Index")
                        <span>Filmler</span>
                    </div>

                    <div class="filters">
                        <select name="#" id="#" placeholder="Kategori Seçin">
                            @foreach (Genre item2 in Model.Item1)
                            {
                                <option value="#">@item2.GenreName</option> //burası düzenlenecek.GetByGenres ile olmalı.
                            }
                        </select>
                    </div>

                    <div class="movie-list">
                        @foreach (Movie item in Model.Item2)
                        {
                            <div class="movie">
                                <figure class="movie-poster"><img style="width:328px;height:296px;" src="@item.ImagePath" alt="#"></figure>
                                <div class="movie-title">@Html.ActionLink(item.MovieName,"SingleMovie",new {id=item.MovieID })</div>
                                
                            </div>
                        }
                    </div>


                    <div class="pagination">
                        <a href="#" class="page-number prev"><i class="fa fa-angle-left"></i></a>
                        <span class="page-number current">1</span>
                        <a href="#" class="page-number">2</a>
                        <a href="#" class="page-number">3</a>
                        <a href="#" class="page-number">4</a>
                        <a href="#" class="page-number">5</a>
                        <a href="#" class="page-number next"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div> <!-- .container -->
        </main>
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="widget">
                            <a href="~/Member/About"<h3 class="widget-title">Hakkımızda</h3></a>
                            <p>CineFlex hakkında tüm detaylara "Hakkımızda" ya tıklayarak ulaşabilirsiniz.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="widget">
                            <h3 class="widget-title">Son Görüntülenen Filmler</h3>
                            <ul class="no-bullet">
                                <li><a href="#">Düzenbazlar Çetesi</a></li>
                                <li><a href="#">Fast & Furious : Hobbs and Shaw</a></li>
                                <li><a href="#">45-25 Kusursuz Cinayet</a></li>
                                <li><a href="#">Kod Adı: Angel</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="widget">
                            <h3 class="widget-title">Sosyal Medya</h3>
                            <ul class="no-bullet">
                                <li><a href="#">Facebook</a></li>
                                <li><a href="#">Twitter</a></li>
                                <li><a href="#">Google+</a></li>
                                <li><a href="#">Pinterest</a></li>
                            </ul>
                        </div>
                    </div>
                 
                </div> <!-- .row -->

                <div class="colophon">CineFlex 2003, tüm hakları saklıdır.</div>
            </div> <!-- .container -->

        </footer>
    </div>
    <!-- Default snippet for navigation -->

    <script src="~/OuterTools/movie_review/js/jquery-1.11.1.min.js"></script>
    <script src="~/OuterTools/movie_review/js/plugins.js"></script>
    <script src="~/OuterTools/movie_review/js/app.js"></script>
</body>

</html>
