@model AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/movie_review/images/logo@2x.png">
    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/movie_review/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/movie_review/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    @*<link href="~/OuterTools/movie_review/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />*@
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/movie_review/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/movie_review/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-body">
    <div class="container">

        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.HiddenFor(x=> x.ID)
            @Html.HiddenFor(x=> x.Email)
            @Html.HiddenFor(x => x.EmailID)
            @Html.HiddenFor(x=>  x.UserName)
           
            <h2 class="form-signin-heading">Şifre Sıfırlama</h2>
            <div class="login-wrap">
                <p>Lütfen yeni şifrenizi girin</p> <br />
     
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Yeni Şifre" }) <br />

                <p>Lütfen yeni şifrenizi tekrar girin</p>

                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Yeni Şifre Tekrar" })

            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">@Html.ActionLink("İptal Et", "Login", null, new { @class = "btn btn-navbar" })</button>
                <button class="btn btn-success" type="submit">Gönder</button>
            </div>

            <div class="form-horizontal">
                <hr />
                <div class="text-success">
                    @ViewBag.Message
                </div>

            </div>

        }
        <!-- js placed at the end of the document so the pages load faster -->
        <script src="~/OuterTools/FlatAdmin/js/jquery.js"></script>
        <script src="~/OuterTools/FlatAdmin/js/bootstrap.min.js"></script>

</body>
</html>
