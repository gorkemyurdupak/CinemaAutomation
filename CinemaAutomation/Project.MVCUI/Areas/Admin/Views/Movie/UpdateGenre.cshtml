@model Genre
@{
    ViewBag.Title = "UpdateGenre";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel-body">
    <div class="form">

        @using (Html.BeginForm("UpdateGenre", "Movie", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form", enctype = "multipart/form-data" }))
        {

            @Html.HiddenFor(x=> x.GenreID)
            <div class="form-group ">
                <label for="firstname" class="control-label col-lg-2">Tür adı</label>
                <div class="col-lg-6">
                    @Html.TextBoxFor(x=> x.GenreName, new { @class = "form-control" })
                </div>
            </div>
                 
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-6">
                    <button class="btn btn-danger" type="submit">Save</button>
                    @Html.ActionLink("İptal Et", "GenreList", null, new { @class = "btn btn-default" })

                </div>
            </div>

        }
    </div>
</div>

